<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zx.dao.AccountDao">
	<select id="queryAccountByNameAndPwd" resultType="com.zx.beans.Account" parameterType ="String">
		SELECT Username, Password
		FROM account
		WHERE
		Username = #{username}
		AND
		Password = #{password}
	</select>
	<select id = "queryAccountByName" resultType = "com.zx.beans.Account" parameterType ="String">
 	    SELECT Username
 	    From account
 	    WHERE
 	    Username = #{username}
	</select>
	<select id = "updateAccountPwd" parameterType = "String">
	<set>
		<if test = "password != null">Password = #{password}</if>		
	</set>
		WHERE Username = #{username}
	</select>

<insert id="RegisterAccountPwd" parameterType ="String" >
   INSERT INTO 
   account (Username,Password,Dt_create)
           VALUES (#{username}, #{password},#{Dt_create})
</insert>
   

<select id="Login"  resultType = "String" parameterType ="String">

  SELECT Password
 	    From account
 	    WHERE
 	    Username = #{username}

</select>

</mapper>
